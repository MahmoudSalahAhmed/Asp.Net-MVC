@using Task.Structure.ViewModels
@model IEnumerable<GroupViewModel>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <div class="container">
            <div class="row">
                <div class="col-3">

                </div>
                <div class="col-6">
                    <table class="table text-center">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GroupViewModel Group in @Model)
                            {
                                <tr>
                                    <td>@Group.Name</td>
                                    <td>@Html.ActionLink("details", "Details", "Group", new { id = Group.ID }, new { @class = "btn btn-primary" })</td>
                                </tr>
                             }

                        </tbody>
                    </table>


                </div>
                <div class="col-2">

                </div>
            </div>
            <div class="row">
                <div class="col-4"></div>
                <div class="col-2">
                    @Html.ActionLink("Add Group", "Add", "Group", null, new { @class = "btn btn-primary" })
                </div>

            </div>
        </div>
    </div>
</body>
</html>
