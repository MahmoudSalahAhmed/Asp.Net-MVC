@using Task.Structure.ViewModels
@model ItemViewModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>
        <div class="container">
            <div class="row">
                <div class="col-2">

                </div>
                <div class="col-8">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Name</th>
                                <th scope="col">Price</th>
                                
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>@Model.ID</td>
                                <td>@Model.Name</td>
                                <td>@Model.Price</td>
                            </tr>


                        </tbody>
                    </table>


                </div>
                <div class="col-2">

                </div>
            </div>
            <div class="row">
                <div class="col-4"></div>
                <div class="col-1">
                    @Html.ActionLink("Update", "Update", "Item", new { id = Model.ID }, new { @class = "btn btn-success" })
                </div>
                <div class="col-1">
                    @Html.ActionLink("Delete", "Delete", "Item", new { id = Model.ID }, new { @class = "btn btn-success" })
                </div>
                <div class="col-1">
                    @Html.ActionLink("Back", "Item", "Item", null, new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    </div>
</body>
</html>
