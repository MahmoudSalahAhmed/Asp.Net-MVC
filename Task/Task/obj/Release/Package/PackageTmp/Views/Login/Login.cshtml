@using Task.Structure.ViewModels
@model AdminEditViewModel
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/Login/Login.css" rel="stylesheet" />
</head>

<body>

    <div class="row">

        <div class="col-7">
            <br><br><br>
            @using (Html.BeginForm("Login", "Login"))
            {
                <div class="login-content">

                    <div class="col s12 ">

                        <div class="img">
                            <svg viewBox="0 0 960 300" class="svgs">
                                <symbol id="s-text">
                                    <text text-anchor="middle" x="50%" y="80%">O r m a n</text>
                                </symbol>

                                <g class="g-ants">
                                    <use xlink:href="#s-text" class="text-copy"></use>
                                    <use xlink:href="#s-text" class="text-copy"></use>
                                    <use xlink:href="#s-text" class="text-copy"></use>
                                    <use xlink:href="#s-text" class="text-copy"></use>
                                    <use xlink:href="#s-text" class="text-copy"></use>
                                </g>
                            </svg>
                        </div>

                        <h2 class="title">Welcome</h2>

                        <div class="input-div one ">
                            <div class="i">
                                <i class="fa fa-user"></i>
                            </div>
                            <div class="div">
                                <label style="font-size:18px;">UserName</label>
                                <br />
                                @Html.TextBoxFor(i => i.UserName, new { @class = "form-control" })
                                <br />
                                @if (ViewBag.UserName != null)
                                {
                                <p style="color:red;text-align:center;"> @ViewBag.UserName</p>
                                }
                            </div>

                        </div>
                        <div class="input-div pass ">
                            <div class="i">
                                <i class="fa fa-lock"></i>
                            </div>
                            <div class="div">
                                <label style="font-size:18px;">Password</label>
                                <br />
                                @Html.TextBoxFor(i => i.Password, new { @class = "form-control" })
                                <br />
                                @if (ViewBag.Password != null)
                                {
                                    <p style="color:red;text-align:center;"> @ViewBag.Password</p>
                                }
                            </div>

                        </div>
                        <br />
                        @if (ViewBag.IsAdmin !=null) {
                        <div class="red-text center error-message">
                            <i class="material-icons">error</i> @ViewBag.IsAdmin
                        </div>
                        }
                        <br />
                        <input type="submit" class="btn" value="Login" />

                    </div>

                </div>
            }
        </div>
        <div class="col-5">



        </div>
    </div>
</body>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
<script src="https://kit.fontawesome.com/a81368914c.js"></script>


</html>
