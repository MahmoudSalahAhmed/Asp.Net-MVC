@using Task.Structure.ViewModels
@model ItemViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
</head>
<body>
    <div>
        <div class="container">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8">
                    <div class="text-center">
                        <h1>Update Item</h1>
                    </div>
                    @using (Html.BeginForm())
                    {
                        <div class="form-group"> 
                            @Html.LabelFor(i => i.Name)
                            @Html.TextBoxFor(i => i.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(i => i.Name)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(i => i.Price)
                            @Html.TextBoxFor(i => i.Price, new { @class = "form-control" })
                            @Html.ValidationMessageFor(i => i.Price)
                        </div>
                        <div class="row">
                            
                            <div class="col-3">
                                <input type="submit" value="Update" class="btn btn-secondary" />
                            </div>
                            <div class="col-3">
                                @Html.ActionLink("Back", "Details","Item", new {id = Model.ID }, new { @class = "btn btn-danger" })
                            </div>
                            <div class="col-3">
                                
                            </div>
                        </div>
                    }
                </div>
                <div class="col-2"></div>
            </div>
        </div>
    </div>
</body>
</html>
