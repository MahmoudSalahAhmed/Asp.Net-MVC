
@using Task.Structure.ViewModels
@model OrderEditViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Order</title>
</head>
<body>

    <div class="container">
        <br>
        <div class="row">
            
            <div class="col-12">
                <p style="text-align: center; color: #da2424;font-size:28px;font-weight:bold ">
                    The Bill
                </p>
            </div>
            
        </div>
        <br> <br>
             <div class="row" style="text-align: right;">
                 <div class="col-1"></div>
                 <div class="col-6">
                     <div class="card border-success mb-3 text-left" style="max-width: 50rem; height: 70%;">
                         <div class="card-header bg-transparent border-success" style="text-align: center; font-size: 22px;">
                             <b>Order Details</b>
                         </div>
                         <div class="card-body text-success">
                             <p style="line-height: 40px;font-size:25px;">
                                 Order No : @Model.ID <br>
                                 Order Date : @Model.Date.ToShortDateString() <br>
                                 Order Time : @Model.Date.ToShortTimeString() <br>
                                 Client Name : @Model.ClientName <br>
                             </p>

                         </div>


                     </div>



                 </div>
                 <div class="col-1"></div>
                 <div class="col-4">
                     <div class="card shadow-lg  mb-5 bg-gray rounded
            " style="background-color: rgb(245, 244, 244); width: 90%;">
                         <div class="card-header"
                              style="text-align: center; font-size: 20px;   background-color:#8ec038; color: white;">
                             @Model.ClientName
                             <i class="fa fa-shopping-basket"></i>
                         </div>

                         <div class="card-body" style="max-height: 250px; overflow:auto ; background-color: white;height:
    250px;">
                             @foreach (var cart in TempData["Cartli"] as List<Task.Models.Cart>)
                             {
                                 <div >
                                     <div class="row"
                                          style="text-align: center;  border-radius: 15px ;border: 2px solid gray;background-color:#e4f8bf;color: black;">
                                         
                                         <div class="col-4" style="font-size: 18px; margin-top: 10px">


                                             <p>
                                                 @cart.TotalPrice
                                             </p>
                                         </div>
                                         <div class="col-5"
                                              style="margin-top: 10px;text-align: center; font-size: 16px; box-sizing: border-box;">

                                             <p style="box-sizing: border-box;"><b>@cart.ItemName</b></p>


                                         </div>
                                         <div class="col-3"
                                              style="margin-top:15px; font-size: 22px; text-align: center; ">
                                             <label style="background-color: #e4f8bf;color: black;; border-radius: 5px;">@cart.Quantity</label>
                                         </div>

                                     </div>

                                     <br>
                                 </div>

                             }

                             </div>
                         <br>
                         <div class="row" style="text-align: center; font-size: 18px;">
                             <div class="col-6" style="line-height: 28px;">
                                 Total <br>


                             </div>
                             <div class="col-6" style="line-height: 28px;">
                                 <b> @Model.Total </b><br>
                             </div>
                         </div>


                         <br>
                     </div>
                 </div>
             </div>

    </div>

</body>
</html>